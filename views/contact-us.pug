extends template

block content

	div(class="row")
		//extra row col-8 to center the three columns 8//3!=0
		div(class="col-lg-8 mx-auto")
			iframe(class="b-brand-thin embed-map w-100 my-5" src="https://www.openstreetmap.org/export/embed.html?bbox=-1.5723109245300293%2C54.8530817267289%2C-1.5643072128295898%2C54.856774998772146&amp;layer=mapnik&amp;marker=54.85492840502175%2C-1.5683090686798096")
			div(class="row")
				div(class="col-lg-4")
					h4() Contact Us
					p
						b Park View Community Association<br />
						| Church Chare<br />
						| Chester-le-Street<br />
						| Co. Durham<br />
						| DH3 3PZ
					p
						b Telephone:
						|  0191 388 10 43<br />
						// Email is hyperlink on original site
						b Email:
						|  info@pvcc.co.uk
					p
						// "Get Directions" is hyperlink on original site
						The Community Centre is located off Junction 63 of the A1M (A167) within the grounds of Park View Academy.
					a(href="https://maps.google.com/maps?ll=54.854944,-1.56973&z=17&t=m&hl=en-GB&gl=US&mapclient=embed&daddr=54%C2%B051%2718.7%22N%201%C2%B034%2712.3%22W@54.855182,-1.570079" target="_blank") Get Directions
				div(class="col-lg-4")
					h4() Centre Opening Times
					p
						b Monday
						|  4:30pm - 10pm<br />
						b Tuesday
						|  4:30pm - 10pm<br />
						b Wednesday
						|  4:30pm - 10pm<br />
						b Thursday
						|  4:30pm - 10pm<br />
						b Friday
						|  4:30pm - 10pm<br />
						b Saturday
						|  7am - 10pm<br />
						b Sunday
						|  9am - 5pm
				div(class="col-lg-4")
					h4() Get In Touch
					form(id="contactForm")
						div(class="form-group")
							input(type="text" class="form-control" name="name" placeholder="Your Name")
						div(class="form-group")
							input(type="email" class="form-control" name="email" placeholder="Your E-mail")
						div(class="form-group")
							input(type="tel" class="form-control" name="phone" placeholder="Your Phone")
						div(class="form-group")
							textarea(class="form-control" name="message" rows="3" placeholder="How Can We Help?")
					button(id="contactSubmit" class="btn w-100" type="button" name="button")
						|Submit
						span(class="fa fa-paper-plane-o" aria-hidden="true")
					span(id="feedback", class="text-success")
