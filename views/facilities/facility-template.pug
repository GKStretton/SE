extends ../template
//- TODO: add image view for the side images of the page 

block content
	div(class="row")
		div(class="col-sm-12")
		img(src=top_image class="img-fluid " style="width:100%;height:250px;object-fit:cover;")
	div(class="row")
		div(class="col-sm-2")
		div(class="col-sm-8")
			p #{page_name}
			hr
			div(class="row")
				div(class="col-sm-4")
					div(class="image-container")
						div(class="row")
							div(class="col-lg-12 main-image-container img-fluid")
								a(class="fancybox" href=side_image id="facility-gallery-fancybox")
									img(src=side_image id="facility-gallery-image" style="width:100%;max-width:500px;height:350;")
						div(class="row")
							block image-gallery
						block image-gallery-extra
				div(class="col-sm-8")
					div(class="container-fluid")
						block description
						//- add onclick js to hide.show form
						input(type="button" class="btn" id="btn-signup" value=button_name onclick="toggleVisability('form-div')") 
						div(id="form-div" class="container-fluid" style="display:none;")
							if button_name === 	"Book Now"
								include form-automated
							else
								include form-manual
						hr
						div(class="row")
							div(class="col-sm-6")
								p Availability
								block availability
							div(class="col-sm-6")
								p Pricing
								block pricing 
		div(class="col-sm-2")
