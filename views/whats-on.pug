									a(href="/event/"+activityName) #{activityName}
									p #{adult[1].times[count]}
							td
								if adult[2].activities[count]
									- var activityName = getActivityName(adult[2].activities[count],activity)
									a(href="/event/"+activityName) #{activityName}
									p #{adult[2].times[count]}
							td
								if adult[3].activities[count]
									- var activityName = getActivityName(adult[3].activities[count],activity)
									a(href="/event/"+activityName) #{activityName}
									p #{adult[3].times[count]}
							td
								if adult[4].activities[count]
									- var activityName = getActivityName(adult[4].activities[count],activity)
									a(href="/event/"+activityName) #{activityName}
									p #{adult[4].times[count]}
							td
